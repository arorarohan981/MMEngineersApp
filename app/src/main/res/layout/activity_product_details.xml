<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ProductDetailsActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/product_image_details"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_margin="20dp"/>



        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_image_details">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:src="@drawable/logo"/>


            <TextView
                android:id="@+id/product_name_on_APD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/product_name"
                android:gravity="start"
                android:textStyle="bold"
                android:textColor="#257728"
                android:layout_margin="15dp"
                android:textSize="40sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/product_description_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/product_name"
            android:layout_below="@+id/linear1"
            android:gravity="start"
            android:textStyle="italic"
            android:paddingStart="20sp"
            android:layout_margin="15dp"
            android:textSize="20sp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openWhatsapponContactus"
            android:layout_below="@+id/product_description_details"
            >
            <ImageView
                android:layout_marginLeft="40dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/whatsapplogo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enquire More About This Product "
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:textColor="@color/black"
                android:textIsSelectable="false"
                android:textSize="22dp"
                android:textStyle="normal|bold"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                />
        </LinearLayout>



    </RelativeLayout>
</ScrollView>

</RelativeLayout>